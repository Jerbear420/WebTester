@page "/employees/view/{id:min(1)}"
@model WebTester.Pages.Employees.DetailsModel
@{
	ViewData["Title"] = "Employee Details";
	var photoPath = "~/images/" + (Model.Employee.Image ?? "nologo.png");
}

<h1>Details</h1>

<div class="row justify-content-center m3"> 
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h1>@Model.Employee.DisplayName</h1>
			</div>
			<div class="card-body text-center">
				<img class="card-img-top" src="@photoPath" asp-append-version=true />
				<h4>Employee Id : @Model.Employee.Id</h4>
				<h4>Employee Name : @Model.Employee.FirstName</h4>
				<h4>Employee Description : @Model.Employee.LastName</h4>
			</div>
			<div class="card-footer text-center">
				<a asp-page="index" class="btn btn-primary">Back</a>
				<a asp-page="/Employees/Edit" asp-route-ID="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
				<a asp-page="/Employees/Delete" asp-route-ID="@Model.Employee.Id" class="btn btn-danger m-1">Delete</a>
			</div>
			<div class="form-group row col-sm-4 offset-4">
				<img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
			</div>
		</div>
	</div>
</div>