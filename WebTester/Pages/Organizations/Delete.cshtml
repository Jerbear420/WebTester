@page "{id:min(1)}"
@model WebTester.Pages.Organizations.DeleteModel
@{
	ViewData["Title"] = "Delete";
	ViewData["ShowButtons"] = false;
}

<h1>Delete Confirmation</h1>

<div class="alert alert-danger">
	<partial name="_DisplayOrganizationPartial" model="Model.Organization" view-data="ViewData"/>
	<h5>Are you sure you want to delete organization - @Model.Organization.Title</h5>
	<form method="post">
		<button type="submit" class="btn btn-danger">Yes</button>
		<a class="btn btn-primary" asp-page="/Organizations/Index">No</a>

	</form>
</div>