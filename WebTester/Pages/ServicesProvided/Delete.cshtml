@page "{id:int}"
@model WebTester.Pages.ServicesProvided.DeleteModel
@{
    ViewData["Title"] = "Delete Service";
}

<h2>@ViewData["Title"]</h2>

@if (Model.Service != null)
{
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this service?</h4>
        <p><strong>Name:</strong> @Model.Service.Name</p>
        <p><strong>Description:</strong> @Model.Service.Description</p>
        <p><strong>Customer Cost:</strong> $@Model.Service.Customer_Cost</p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Service.Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-page="/ServicesProvided/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-warning">Service not found.</div>
    <a asp-page="/ServicesProvided/Index" class="btn btn-secondary">Back</a>
}
