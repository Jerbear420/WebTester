@page
@model WebTester.Pages.ServicesProvided.IndexModel
@{
    ViewData["Title"] = "Services Provided";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Services Provided</h2>
    <a asp-page="/ServicesProvided/Edit" class="btn btn-success">+ Add Service</a>
</div>

<div class="row">
    @foreach (var service in Model.Services)
    {
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card shadow-sm mb-4 w-100">
                <div class="card-body">
                    <h5 class="card-title">@service.Name</h5>
                    <h6 class="card-subtitle text-muted">SKU: @service.SKU</h6>
                    <p class="card-text mt-2">@service.Description</p>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Customer Cost:</strong> $@service.Customer_Cost</li>
                        <li class="list-group-item"><strong>Reseller Cost:</strong> $@service.Reseller_Cost</li>
                        <li class="list-group-item"><strong>Type:</strong> @service.Type</li>
                    </ul>

                    <div class="mt-3 text-center">
                        <a asp-page="/ServicesProvided/Details" asp-route-id="@service.Id" class="btn btn-primary me-2">View</a>
                        <a asp-page="/ServicesProvided/Edit" asp-route-id="@service.Id" class="btn btn-primary me-2">Edit</a>
                        <a asp-page="/ServicesProvided/Delete" asp-route-id="@service.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
