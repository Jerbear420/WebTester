@using WebTester.Models.Organizations
@model Employee
@{
	var photoPath = "~/images/" + (Model.Image ?? "nologo.png");
	var showButtons = (bool)ViewData["ShowButtons"];
}
<div class="col-md-4 d-flex align-items-stretch">
	<div class="card m-3 w-100">
		<div class="card-header">
			<h3>@Model.FirstName</h3>
		</div>
		<img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
		@if (showButtons)
		{
			<div class="card-footer text-center">
				<a asp-page="/Employees/Details" asp-route-ID="@Model.Id" class="btn btn-primary m-1">View</a>
				<a asp-page="/Employees/Edit" asp-route-ID="@Model.Id" class="btn btn-primary m-1">Edit</a>
				<a asp-page="/Employees/Delete" asp-route-ID="@Model.Id" class="btn btn-danger m-1">Delete</a>
			</div>
		}
	</div>
</div>