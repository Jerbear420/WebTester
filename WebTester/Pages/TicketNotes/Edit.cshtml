@page "{id:min(1)?}"
@model WebTester.Pages.TicketNotes.EditModel
@{
	//var photoPath = "~/images/" + (Model.Organization.Image ?? "nologo.png");
	var pageHeader = Model.TicketNote.Id > 0 ? "Edit" : "Create";
} 

<h1>@pageHeader</h1>

<form method="post" class="mt-3" enctype="multipart/form-data">
	<input hidden asp-for="TicketNote.Id" />


	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group row">
		<label asp-for="TicketNote.Name" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="TicketNote.Name" class="form-control" placeholder="Name" />
			<span asp-validation-for="TicketNote.Name" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group row">
		<label asp-for="TicketNote.Description" class="col-sm-2 col-form-label">
		</label>
		<div class="col-sm-10">
			<input asp-for="TicketNote.Description" class="form-control" placeholder="Description" />
		</div>
	</div>
	 
	<input type="hidden" name="Title" />
	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-page="/TicketNotes/Index" class="btn btn-primary">Cancel</a>
		</div>
	</div> 
		<partial name="_ValidationScriptsPartial" />

	}
</form>
