@page "{id:min(1)}"
@model WebTester.Pages.TicketNotes.DeleteModel
@{
	ViewData["Title"] = "Delete";
	ViewData["ShowButtons"] = false;
}

<h1>Delete Confirmation</h1>

<div class="alert alert-danger">
	<partial name="_DisplayTicketNotePartial" model="Model.TicketNote" view-data="ViewData"/>
	<h5>Are you sure you want to delete ticket - @Model.TicketNote.Name</h5>
	<form method="post">
		<button type="submit" class="btn btn-danger">Yes</button>
		<a class="btn btn-primary" asp-page="/Tickets/Index">No</a>

	</form>
</div>